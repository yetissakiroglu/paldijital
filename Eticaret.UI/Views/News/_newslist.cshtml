@model NewsViewListModel

@foreach (var item in Model.Newsies)
{
    <!-- post -->
    <div class="col-12 col-sm-4 col-lg-3">
        <div class="post">
            <a href="@Url.RouteUrl("NewsDetail", new { @categoryUrl = item.NewsCategory.url, @newsUrl = item.url })" class="post__img" title="@item.title">
                <img src="@item.imgPath" alt="@item.title" title="@item.title">
            </a>
            <div class="post__content">
                <a href="@Url.RouteUrl("NewsCategory", new { @categoryUrl = item.NewsCategory.url })" title="@item.NewsCategory.title" class="post__category">@item.NewsCategory.title</a>
                <h3 class="post__title"><a href="@Url.RouteUrl("NewsDetail", new { @categoryUrl = item.NewsCategory.url, @newsUrl = item.url })" title="@item.title">@item.title</a></h3>
                <div class="post__meta">
                    <span class="post__date"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12,2A10,10,0,1,0,22,12,10.01114,10.01114,0,0,0,12,2Zm0,18a8,8,0,1,1,8-8A8.00917,8.00917,0,0,1,12,20ZM14.09814,9.63379,13,10.26807V7a1,1,0,0,0-2,0v5a1.00025,1.00025,0,0,0,1.5.86621l2.59814-1.5a1.00016,1.00016,0,1,0-1-1.73242Z" /></svg> @item.addTime.ToString("dd MMMM yyyy")</span>
                    <span class="post__comments"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17,9H7a1,1,0,0,0,0,2H17a1,1,0,0,0,0-2Zm-4,4H7a1,1,0,0,0,0,2h6a1,1,0,0,0,0-2ZM12,2A10,10,0,0,0,2,12a9.89,9.89,0,0,0,2.26,6.33l-2,2a1,1,0,0,0-.21,1.09A1,1,0,0,0,3,22h9A10,10,0,0,0,12,2Zm0,18H5.41l.93-.93a1,1,0,0,0,0-1.41A8,8,0,1,1,12,20Z" /></svg> 0</span>
                </div>
            </div>
        </div>
    </div>
    <!-- end post -->
}