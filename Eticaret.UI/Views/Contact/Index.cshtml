@model ContactViewListModel
<!-- main content -->
<div class="container-fluid">
    <div class="row row--grid news-background">
        <!-- title -->
        <div class="col-6">
            <div class="main__title main__title--page">
                <h1>@Model.title</h1><br />
            </div>
        </div>
        <!-- end title -->
        <!-- breadcrumb -->
        <div class="col-6">
            <ul class="breadcrumb">
                <li class="breadcrumb__item"><a asp-controller="Home">Anasayfa</a></li>
                <li class="breadcrumb__item breadcrumb__item--active">@Model.title</li>

            </ul>
        </div>
        <!-- end breadcrumb -->
    </div>

    <div class="row row--grid">
        <div class="col-md-12">
            @if (TempData["message"] != null)
            {
                <partial name="_resultmessage" model="@(TempData.Get<ResultMessage>("message"))" />
            }
        </div>

        @*<button class="btn-common" id="btnMiniBasvuru" onclick="MiniBasvuru($('#txtFormAdSoyad').val(),$('#txtCepNo').attr('value-unmasked'),$('#txtAciklama').val(),'@Url.Action("MiniBasvuru")')">Ücretsiz Danışın</button>

        <div class="alert alert-danger" id="basvuruAnasayfaHata" role="alert" style="display: none;">*@



            <div class="col-lg-offset-2 col-12 col-lg-6 col-xl-6">
                @using (Html.BeginForm("Send", "Contacts", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "sign__form sign__form--contacts" }))
                {
                    <div class="offer-form">
                        <h2 class="form-caption">
                            <span>İletişim Formu</span>
                        </h2>
                        <p class="form-info">
                            <span><b>formu doldurun</b> Pal Media, Çam Grup Şirketler Grubuna bağlı Türkiye'nin öncü medya kuruluşlarından birisidir.  </span>
                        </p>
                    </div>
                    <div class="row row row--grid">
                        <div class="col-12 col-md-6">
                            <div class="sign__group">
                                @Html.TextBoxFor(m => m.Contact.name, new { @class = "sign__input", @placeholder = "Adınız soyadınız" })
                                @Html.ValidationMessageFor(model => model.Contact.name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="sign__group">
                                @Html.TextBoxFor(m => m.Contact.email, new { @class = "sign__input", @placeholder = "E-posta adresiniz" })
                                @Html.ValidationMessageFor(model => model.Contact.email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-12 ">
                            <div class="sign__group">
                                @Html.TextBoxFor(m => m.Contact.subject, new { @class = "sign__input", @placeholder = "Konu" })
                                @Html.ValidationMessageFor(model => model.Contact.subject, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-12 ">
                            <div class="sign__group">
                                @Html.TextAreaFor(m => m.Contact.message, new { @class = "sign__textarea", @placeholder = "Mesajınız" })
                                @Html.ValidationMessageFor(model => model.Contact.message, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-12 col-xl-3">
                            <button type="button" class="sign__btn">Gönder</button>
                        </div>
                    </div>
                }
            </div>

