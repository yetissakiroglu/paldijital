@model HomeViewListeModel

<section class="row row--grid">
    <!-- title -->
    <div class="col-12">
        <div class="main__title">
            <h2>Öne Çıkanlar - Müziğin Gündemi</h2>
            <a href="haberler" class="main__link">Tümünü İncele <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z" /></svg></a>
        </div>
    </div>
    <!-- end title -->
    @foreach (var item in Model.Oncikanlar)
    {
        <!-- post -->
        <div class="col-12 col-sm-4 col-lg-3">
            <div class="post">
                <a href="@item.url" class="post__img">
                    <img src="@item.imgPath" alt="@item.title" class="img-responsive">
                </a>
                <div class="post__content">
                    <a href="@item.categoryUrl" class="post__category">@item.categoryTitle</a>
                    <h3 class="post__title"><a href="@item.url">@item.shortDetail</a></h3>
                    <div class="post__meta">
                        <span class="post__date"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12,2A10,10,0,1,0,22,12,10.01114,10.01114,0,0,0,12,2Zm0,18a8,8,0,1,1,8-8A8.00917,8.00917,0,0,1,12,20ZM14.09814,9.63379,13,10.26807V7a1,1,0,0,0-2,0v5a1.00025,1.00025,0,0,0,1.5.86621l2.59814-1.5a1.00016,1.00016,0,1,0-1-1.73242Z" /></svg> 2 hours ago</span>
                    </div>
                </div>
            </div>
        </div>
        <!-- end post -->
    }
</section>
