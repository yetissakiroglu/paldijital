@model HomeViewListeModel
@{
    ViewData["Title"] = "Radyo Grup";

    var counter = 0;
    var counter1 = 0;
}

<div class="container-fluid">
    <!-- slider -->
    @Html.Partial("_sliderHome", Model)
    <!-- end slider -->
    <!-- news -->
    @Html.Partial("_oneCikanlar", Model)

    
    <!-- end news -->
    <!-- listeler -->
    <section class="row row--grid">
        @foreach (var item in Model.TopMusicLists)
        {
            <div class="col-12 col-md-6 col-xl-4">
                <div class="row row--grid">
                    <!-- title -->
                    <div class="col-12">
                        <div class="main__title">
                            <h2><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.65,2.24a1,1,0,0,0-.8-.23l-13,2A1,1,0,0,0,7,5V15.35A3.45,3.45,0,0,0,5.5,15,3.5,3.5,0,1,0,9,18.5V10.86L20,9.17v4.18A3.45,3.45,0,0,0,18.5,13,3.5,3.5,0,1,0,22,16.5V3A1,1,0,0,0,21.65,2.24ZM5.5,20A1.5,1.5,0,1,1,7,18.5,1.5,1.5,0,0,1,5.5,20Zm13-2A1.5,1.5,0,1,1,20,16.5,1.5,1.5,0,0,1,18.5,18ZM20,7.14,9,8.83v-3L20,4.17Z" /></svg><a href="#">@item.title - @item.RadioApi.title</a></h2>
                        </div>
                    </div>
                    <!-- end şarkılar -->
                    <div class="col-12">
                        <ul class="main__list">
                            @foreach (var Mitem in item.MusicLists.OrderBy(parent => parent.thisWeek))
                            {
                                <li class="single-item">
                                    <span class="single-item__number">@Mitem.thisWeek</span>
                                    @if (Mitem.thisWeek > Mitem.lastWeek)
                                    {
                                        <span class="single-item__rate single-item__rate--red"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M11.29,11.46a1,1,0,0,0,1.42,0l3-3A1,1,0,1,0,14.29,7L12,9.34,9.71,7A1,1,0,1,0,8.29,8.46Zm3,1.08L12,14.84l-2.29-2.3A1,1,0,0,0,8.29,14l3,3a1,1,0,0,0,1.42,0l3-3a1,1,0,0,0-1.42-1.42Z" /></svg> @Mitem.lastWeek</span>
                                    }
                                    @if (Mitem.thisWeek < Mitem.lastWeek)

                                    {
                                        <span class="single-item__rate"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d=" M12.71,12.54a1,1,0,0,0-1.42,0l-3,3A1,1,0,0,0,9.71,17L12,14.66,14.29,17a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42Zm-3-1.08L12,9.16l2.29,2.3a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42l-3-3a1,1,0,0,0-1.42,0l-3,3a1,1,0,0,0,1.42,1.42Z" /></svg> @Mitem.lastWeek</span>
                                    }
                                    <a data-link data-title="@Mitem.songName" data-artist="@Mitem.singerName" data-img="@Mitem.imgPath" href="@Mitem.filePath" class="single-item__cover">
                                        <img src="@Mitem.imgPath" alt="@Mitem.songName-@Mitem.singerName">
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M18.54,9,8.88,3.46a3.42,3.42,0,0,0-5.13,3V17.58A3.42,3.42,0,0,0,7.17,21a3.43,3.43,0,0,0,1.71-.46L18.54,15a3.42,3.42,0,0,0,0-5.92Zm-1,4.19L7.88,18.81a1.44,1.44,0,0,1-1.42,0,1.42,1.42,0,0,1-.71-1.23V6.42a1.42,1.42,0,0,1,.71-1.23A1.51,1.51,0,0,1,7.17,5a1.54,1.54,0,0,1,.71.19l9.66,5.58a1.42,1.42,0,0,1,0,2.46Z" /></svg>
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M16,2a3,3,0,0,0-3,3V19a3,3,0,0,0,6,0V5A3,3,0,0,0,16,2Zm1,17a1,1,0,0,1-2,0V5a1,1,0,0,1,2,0ZM8,2A3,3,0,0,0,5,5V19a3,3,0,0,0,6,0V5A3,3,0,0,0,8,2ZM9,19a1,1,0,0,1-2,0V5A1,1,0,0,1,9,5Z" /></svg>
                                    </a>
                                    <div class="single-item__title">
                                        <h4><a href="#">@Mitem.songName</a></h4>
                                        <span><a href="artist.html">@Mitem.singerName</a></span>
                                    </div>
                                    <span class="single-item__time">2:35</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </section>
    <!-- end listeler -->
    <!-- djler -->
    <section class="row row--grid">
        <!-- title -->
        <div class="col-12">
            <div class="main__title">
                <h2>Dj'ler  <small> - Müziğin sesi burada</small></h2>
                <a href="#" class="main__link">See all <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z" /></svg></a>
            </div>
        </div>
        <!-- end title -->
        @foreach (var item in Model.Djs)
        {
            <div class="col-6 col-sm-3 col-lg-2">
                <a href="@item.url" class="artist">
                    <div class="artist__cover">
                        <img src="@item.imgPath" alt="">
                    </div>
                    <h3 class="artist__title">@item.title</h3>
                </a>

            </div>}
    </section>
    <!-- end djler -->
    <!-- radyolar -->
    <section class="row row--grid">
        <!-- title -->
        <div class="col-12">
            <div class="main__title">
                <h2>Radyolar</h2>
                <a href="radyolar" class="main__link">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.65,2.24a1,1,0,0,0-.8-.23l-13,2A1,1,0,0,0,7,5V15.35A3.45,3.45,0,0,0,5.5,15,3.5,3.5,0,1,0,9,18.5V10.86L20,9.17v4.18A3.45,3.45,0,0,0,18.5,13,3.5,3.5,0,1,0,22,16.5V3A1,1,0,0,0,21.65,2.24ZM5.5,20A1.5,1.5,0,1,1,7,18.5,1.5,1.5,0,0,1,5.5,20Zm13-2A1.5,1.5,0,1,1,20,16.5,1.5,1.5,0,0,1,18.5,18ZM20,7.14,9,8.83v-3L20,4.17Z" /></svg>
                    <span>&nbsp; Tümü</span>
                </a>
            </div>
        </div>  <div class="col-12 col-sm-12 col-lg-12">
            <div class="main__carousel-wrap">
                <div class="main__carousel main__carousel--radio owl-carousel" id="radios">

                    @foreach (var item in Model.Radios)
                    {
                        <!-- end @item.title -->

                        <div class="h_radio">
                            <div class="h_radio__cover">
                                <img src="@item.imgPath" alt="">
                                <div class="main__list main__list--playlist">
                                    <div class="single-item">
                                        <a data-playlist
                                           data-title="@item.title"
                                           data-artist="Çalıyor"
                                           data-img="@item.imgPath"
                                           href="@item.streamUrl/stream.mp3">
                                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M18.54,9,8.88,3.46a3.42,3.42,0,0,0-5.13,3V17.58A3.42,3.42,0,0,0,7.17,21a3.43,3.43,0,0,0,1.71-.46L18.54,15a3.42,3.42,0,0,0,0-5.92Zm-1,4.19L7.88,18.81a1.44,1.44,0,0,1-1.42,0,1.42,1.42,0,0,1-.71-1.23V6.42a1.42,1.42,0,0,1,.71-1.23A1.51,1.51,0,0,1,7.17,5a1.54,1.54,0,0,1,.71.19l9.66,5.58a1.42,1.42,0,0,1,0,2.46Z" /></svg>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </div>
                <button class="main__nav main__nav--prev" data-nav="#radios" type="button"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17,11H9.41l3.3-3.29a1,1,0,1,0-1.42-1.42l-5,5a1,1,0,0,0-.21.33,1,1,0,0,0,0,.76,1,1,0,0,0,.21.33l5,5a1,1,0,0,0,1.42,0,1,1,0,0,0,0-1.42L9.41,13H17a1,1,0,0,0,0-2Z" /></svg></button>
                <button class="main__nav main__nav--next" data-nav="#radios" type="button"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M17.92,11.62a1,1,0,0,0-.21-.33l-5-5a1,1,0,0,0-1.42,1.42L14.59,11H7a1,1,0,0,0,0,2h7.59l-3.3,3.29a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l5-5a1,1,0,0,0,.21-.33A1,1,0,0,0,17.92,11.62Z" /></svg></button>
            </div>
        </div>
    </section>
    <!-- end radyolar -->


</div>


