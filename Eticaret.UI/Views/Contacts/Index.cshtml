@model ContactsViewListModel
<!-- main content -->
<div class="container-fluid">
    <div class="row row--grid">
        <!-- breadcrumb -->
        <div class="col-12">
            <ul class="breadcrumb">
                <li class="breadcrumb__item"><a asp-controller="Home">Anasayfa</a></li>
                <li class="breadcrumb__item breadcrumb__item--active">@Model.title</li>

            </ul>
        </div>
        <!-- end breadcrumb -->
        <!-- title -->
        <div class="col-12">
            <div class="main__title main__title--page">
                <h1>@Model.title</h1><br />
            </div>
        </div>
        <!-- end title -->

        <div class="row row--grid">

            <div class="col-md-12">
                @if (TempData["message"] != null)
                {
                    <partial name="_resultmessage" model="@(TempData.Get<ResultMessage>("message"))" />
                }
            </div>

            <div class="col-lg-offset-2 col-12 col-lg-7 col-xl-8">
                @using (Html.BeginForm("Send", "Contacts", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "sign__form sign__form--contacts" }))
                {
                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="sign__group">
                            @Html.TextBoxFor(m => m.Contacts.name, new { @class = "sign__input", @placeholder = "Adınız soyadınız" })
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="sign__group">
                            @Html.TextBoxFor(m => m.Contacts.email, new { @class = "sign__input", @placeholder = "E-posta adresiniz" })
                        </div>
                    </div>
                    <div class="col-12 col-md-12">
                        <div class="sign__group">
                            @Html.TextAreaFor(m => m.Contacts.subject, new { @class = "sign__textarea", @placeholder = "Konu" })
                        </div>
                    </div>
                    <div class="col-12 col-md-12">
                        <div class="sign__group">
                            @Html.TextAreaFor(m => m.Contacts.message, new { @class = "sign__textarea", @placeholder = "Mesajınız" })
                        </div>
                    </div>
                    <div class="col-12 col-xl-3">
                        <button type="submit" class="sign__btn">Gönder</button>
                    </div>
                </div>
                }


            </div>
        </div>
    </div>
    </div>
