@model RadioListViewModel



<div class="small-header affix-top">
    <div class="mb-4">
        <div class="card-header py-3 d-sm-flex align-items-center justify-content-between">
            <div class="pull-left">
                <h4 class="m-b-xs">
                    @Model.title
                </h4>
                <small>Yeni nesil panelde masaüstü ve mobil aygıtlarda hızlı bir şekilde veri ekleyebilir ve düzenleyebilirsiniz.</small>
            </div>
            <div class="btn-group pull-right">
                <button name="geri_don" type="button" value="Geri Dön" onclick="javascript:window.history.go(-1);" class="btn btn-primary btn-sm"><i class="fa fa-angle-left"></i>&nbsp;Geri Dön</button>
                <div class="btn-group">
                    <a class="btn btn-sm green dropdown-toggle" href="javascript:;" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                        İşlemler
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <ul class="dropdown-menu pull-right">
                        <li>
                            <a asp-action="Create"><i class="fa fa-plus"></i>&nbsp;Yeni Ekle</a>
                        </li>
                        <li class="split"></li>
                        <li>
                            <a asp-action="Index"><i class="fa fa-list"></i>&nbsp;Tüm Kayıtlar</a>
                        </li>
                    </ul>
                </div>
                <input type="submit" value="KAYDET" class="btn btn-success btn-sm" />
            </div>
        </div>
    </div>
</div>


<div class="card-body">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="Radio.radioId" asp-for="Radio.radioId" value="@Model.Radio.radioId">
    <input type="hidden" name="Radio.imgPath" asp-for="Radio.imgPath" value="@Model.Radio.imgPath">

    <div class="form-group">
        <label asp-for="Radio.title" class="control-label"></label>
        <input asp-for="Radio.title" class="form-control" />
        <span asp-validation-for="Radio.title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Radio.slogan" class="control-label"></label>
        <input asp-for="Radio.slogan" class="form-control" />
        <span asp-validation-for="Radio.slogan" class="text-danger"></span>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Radio.categoryId, htmlAttributes: new { @class = "control-label" })
        <div class="col-md-12 p-0">
            <div class="input-group">
                @Html.DropDownListFor(model => model.Radio.categoryId, (IEnumerable<SelectListItem>)Model.Categories, new { @class = "form-control" })
                <div class="input-group-append">
                    <a href="javascript:;" data-target="/ysadmin/Radio/RadioCategoryCreate" class="btn btn-secondary categorycreate">
                        <i class="la la-plus"></i>Ekle
                    </a>
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.Radio.categoryId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="form-group col-md-4">
                <div class="row">
                    @Html.LabelFor(model => model.Radio.imgPath, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        <div class="fileinput fileinput-new" data-provides="fileinput">
                            <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                @if (Model.Radio.imgPath == null)
                                {
                                    <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="" />
                                }
                                else
                                {<img src="@Model.Radio.imgPath" alt="" />
                                }
                            </div>
                            <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                            <div>
                                <span class="btn default btn-file">
                                    <span class="fileinput-new"> Resim Seç </span>
                                    <span class="fileinput-exists"> Değiştir </span>
                                    <input type="file" id="imgPath" name="imgPath" class="form-control" accept=".jpg,.png" />
                                </span>
                                <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Sil </a>
                            </div>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.Radio.imgPath, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Radio.webUrl" class="control-label"></label>
        <input asp-for="Radio.webUrl" class="form-control" />
        <span asp-validation-for="Radio.webUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Radio.m3u8Url" class="control-label"></label>
        <input asp-for="Radio.m3u8Url" class="form-control" />
        <span asp-validation-for="Radio.m3u8Url" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Radio.streamUrl" class="control-label"></label>
        <input asp-for="Radio.streamUrl" class="form-control" />
        <span asp-validation-for="Radio.streamUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Radio.streamId" class="control-label"></label>
        <input asp-for="Radio.streamId" class="form-control" />
        <span asp-validation-for="Radio.streamId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Radio.row" class="control-label"></label>
        <input asp-for="Radio.row" class="form-control" />
        <span asp-validation-for="Radio.row" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="Radio.webstatus" /> @Html.DisplayNameFor(model => model.Radio.webstatus)
        </label>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="Radio.mobilstatus" /> @Html.DisplayNameFor(model => model.Radio.mobilstatus)
        </label>
    </div>
    <div class="form-group">
        <input type="submit" value="KAYDET" class="btn btn-primary" />
    </div>
</div>