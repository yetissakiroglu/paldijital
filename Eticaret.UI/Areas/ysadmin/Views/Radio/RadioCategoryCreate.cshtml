@model RadioCategoryListViewModel
<div class="row">
    <div class="col-md-12">
        <form asp-action="RadioCategoryCreate" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RadioCategory.title" class="control-label"></label>
                <input asp-for="RadioCategory.title" class="form-control" />
                <span asp-validation-for="RadioCategory.title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RadioCategory.row" class="control-label"></label>
                <input asp-for="RadioCategory.row" value="@Model.RadioCategory.row" class="form-control" />
                <span asp-validation-for="RadioCategory.row" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
