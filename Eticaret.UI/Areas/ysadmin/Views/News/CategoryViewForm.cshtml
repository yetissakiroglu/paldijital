@model NewsCategoryListViewModel



<div class="small-header affix-top">
    <div class="mb-4">
        <div class="card-header py-3 d-sm-flex align-items-center justify-content-between">
            <div class="pull-left">
                <h4 class="m-b-xs">
                 @Model.title
                </h4>
                <small>Yeni nesil panelde masaüstü ve mobil aygıtlarda hızlı bir şekilde veri ekleyebilir ve düzenleyebilirsiniz.</small>
            </div>
            <div class="btn-group pull-right">
                <button name="geri_don" type="button" value="Geri Dön" onclick="javascript:window.history.go(-1);" class="btn btn-primary btn-sm"><i class="fa fa-angle-left"></i>&nbsp;Geri Dön</button>
                <div class="btn-group">
                    <a class="btn btn-sm green dropdown-toggle" href="javascript:;" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                        İşlemler
                        <i class="fa fa-angle-down"></i>
                    </a>
                    <ul class="dropdown-menu pull-right">
                        <li>
                            <a asp-action="CategoryCreate"><i class="fa fa-plus"></i>&nbsp;Yeni Ekle</a>
                        </li>
                        <li class="split"></li>
                        <li>
                            <a asp-action="CategoryIndex"><i class="fa fa-list"></i>&nbsp;Tüm Kayıtlar</a>
                        </li>
                    </ul>
                </div>
                <input type="submit" value="KAYDET" class="btn btn-success btn-sm" />
            </div>
        </div>
    </div>
</div>

<div class="card-body">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" name="NewsCategory.imgPath" asp-for="NewsCategory.imgPath" value="@Model.NewsCategory.imgPath">
    <input type="hidden" name="NewsCategory.categoryId" asp-for="NewsCategory.categoryId" value="@Model.NewsCategory.categoryId">
    <input type="hidden" name="NewsCategory.url" asp-for="NewsCategory.url" value="@Model.NewsCategory.url">

    <div class="form-group">
        <label asp-for="NewsCategory.title" class="control-label"></label>
        <input asp-for="NewsCategory.title" class="form-control" />
        <span asp-validation-for="NewsCategory.title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewsCategory.keywords" class="control-label"></label>
        <input asp-for="NewsCategory.keywords" class="form-control" />
        <span asp-validation-for="NewsCategory.keywords" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewsCategory.description" class="control-label"></label>
        <textarea asp-for="NewsCategory.description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="NewsCategory.description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="form-group col-md-4">
                <div class="row">
                    @Html.LabelFor(model => model.NewsCategory.imgPath, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        <div class="fileinput fileinput-new" data-provides="fileinput">
                            <div class="fileinput-new thumbnail">
                                @if (Model.NewsCategory.imgPath == null)
                                {
                                    <img src="https://via.placeholder.com/706x431" alt="" />
                                }
                                else
                                {<img src="@Model.NewsCategory.imgPath" width="706" alt="" />
                                }
                            </div>
                            <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                            <div>
                                <span class="btn default btn-file">
                                    <span class="fileinput-new"> Resim Seç </span>
                                    <span class="fileinput-exists"> Değiştir </span>
                                    <input type="file" id="imgPath" name="imgPath" class="form-control" accept=".jpg,.png" />
                                </span>
                                <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput"> Sil </a>
                            </div>
                        </div>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.NewsCategory.imgPath, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="NewsCategory.row" class="control-label"></label>
        <input asp-for="NewsCategory.row" class="form-control" />
        <span asp-validation-for="NewsCategory.row" class="text-danger"></span>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="NewsCategory.status" /> @Html.DisplayNameFor(model => model.NewsCategory.status)
        </label>
    </div>
    <div class="form-group">
        <input type="submit" value="KAYDET" class="btn btn-primary" />
    </div>

</div>