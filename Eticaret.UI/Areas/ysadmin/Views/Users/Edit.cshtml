@model UserEditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/ysadmin/Views/Shared/_Layout.cshtml";
}

@section Style {

}
@section Scripts {
    
}
<!--begin::Content-->
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-4 subheader-solid" id="kt_subheader">
        <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-1">
                <!--begin::Page Heading-->
                <div class="d-flex align-items-baseline mr-5">
                    <!--begin::Page Title-->
                    <h5 class="text-dark font-weight-bold my-2 mr-5">User</h5>
                    <!--end::Page Title-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                        <li class="breadcrumb-item">
                            <a href="" class="text-muted">User Edit</a>
                        </li>
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page Heading-->
            </div>
            <!--end::Info-->
            <!--begin::Toolbar-->
            <div class="d-flex align-items-center">
                <!--begin::Actions-->
                <a href="javascript:window.history.go(-1);" class="btn btn-light font-weight-bold btn-sm">Back</a>
                <!--end::Actions-->
            </div>
            <!--end::Toolbar-->
        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="text-danger">@ViewBag.ErrorMessage</div>
            }
            <!--begin::Card-->
            <form asp-controller="Users" class="form" asp-action="Edit" method="post" enctype="multipart/form-data">

                <div class="card card-custom card-sticky" id="kt_page_sticky_card">
                    <!--begin::Body-->
                    <div class="card-header">
                        <div class="card-title">
                            <h3 class="card-label">
                                User Edit
                                <i class="mr-2"></i>
                                <small class="">Aşağıdakı Formu Doldurunız.</small>
                            </h3>
                        </div>
                        <div class="card-toolbar">
                            <div class="btn-group">
                                <button type="submit" class="btn btn-primary font-weight-bolder">
                                    <i class="ki ki-check icon-xs"></i>Save
                                </button>

                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center py-8 px-8 py-lg-15 px-lg-10">
                        <div class="col-xl-12 col-xxl-10">
                            <div class="row justify-content-center">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" name="Id" value="@Model.Id">
                                <div class="col-xl-9">
                                    <div class="form-group row">
                                        <label class="col-xl-3 col-lg-3 col-form-label text-right">Avatar</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <div class="image-input image-input-outline" style="background-image: url(@Model.Avatar)">
                                                <div class="image-input-wrapper" style="background-image: url(@Model.Avatar)"></div>
                                                <label class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="change" data-toggle="tooltip" title="" data-original-title="Change avatar">
                                                    <i class="fa fa-pen icon-sm text-muted"></i>
                                                    <input type="file" name="profile_avatar" accept=".png, .jpg, .jpeg" />
                                                    <input type="hidden" name="Avatar" value="@Model.Avatar" />
                                                    <input type="hidden" name="profile_avatar_remove" />
                                                </label>
                                                <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="cancel" data-toggle="tooltip" title="Cancel avatar">
                                                    <i class="ki ki-bold-close icon-xs text-muted"></i>
                                                </span>
                                                <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="remove" data-toggle="tooltip" title="Remove avatar">
                                                    <i class="ki ki-bold-close icon-xs text-muted"></i>
                                                </span>
                                            </div>
                                            <span class="form-text text-muted">Allowed file types: png, jpg, jpeg.</span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="UserName" class="col-xl-3 col-lg-3 col-form-label text-right">Username</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <input asp-for="UserName" value="@Model.UserName" class="form-control form-control-lg form-control-solid" type="text" />
                                            <span asp-validation-for="UserName" class="text-danger form-text"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="FirstName" class="col-xl-3 col-lg-3 col-form-label text-right">First Name</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <input asp-for="FirstName" value="@Model.FirstName" class="form-control form-control-lg form-control-solid" type="text" />
                                            <span asp-validation-for="FirstName" class="text-danger form-text"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="LastName" class="col-xl-3 col-lg-3 col-form-label text-right">Last Name</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <input asp-for="LastName" value="@Model.LastName" class="form-control form-control-lg form-control-solid" type="text" />
                                            <span asp-validation-for="LastName" class="text-danger form-text"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-xl-3"></label>
                                        <div class="col-lg-9 col-xl-6">
                                            <h5 class="font-weight-bold mt-10 mb-6">Contact Info</h5>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="PhoneNumber" class="col-xl-3 col-lg-3 col-form-label text-right">Contact Phone</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <div class="input-group input-group-lg input-group-solid">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="la la-phone"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="PhoneNumber" value="@Model.PhoneNumber" type="text" class="form-control form-control-lg form-control-solid" />
                                            </div>
                                            <span asp-validation-for="PhoneNumber" class="text-danger form-text"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="Email" class="col-xl-3 col-lg-3 col-form-label text-right">Email Address</label>
                                        <div class="col-lg-9 col-xl-6">
                                            <div class="input-group input-group-lg input-group-solid">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">
                                                        <i class="la la-at"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="Email" value="@Model.Email" type="text" class="form-control form-control-lg form-control-solid" />
                                            </div>
                                            <span asp-validation-for="Email" class="text-danger form-text"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-lg-3 col-xl-3">
                                        </div>
                                        <div class="col-lg-9 col-xl-9">
                                            <label class="col-form-label"><strong>Roles</strong> </label>
                                            <div class="checkbox-list">
                                                @foreach (var rolename in ViewBag.Roles)
                                                {<label class="checkbox" for="@rolename">

                                                        <input type="checkbox"
                                                               name="selectedRoles"
                                                               value="@rolename"
                                                               id="@rolename"
                                                               @(Model.SelectedRoles.Any(i => i == rolename) ? "checked" : "")>
                                                        <span></span>
                                                        @rolename
                                                    </label>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-lg-3 col-xl-3">
                                        </div>
                                        <div class="col-lg-9 col-xl-9">
                                            <div class="checkbox-list">
                                                <label class="col-form-label"><strong>Email Confirmed</strong> </label>
                                                <label class="checkbox">
                                                    <input asp-for="EmailConfirmed" type="checkbox">
                                                    <span></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <!--end::Group-->
                                    <div class="form-group row">
                                        <label asp-for="LockoutEnd" class="col-xl-3 col-lg-3 col-form-label"></label>
                                        <div class="col-lg-9 col-xl-9">
                                            <div class="input-group date" data-z-index="1100">
                                                <input asp-for="LockoutEnd" class="form-control" />
                                                <span asp-validation-for="LockoutEnd" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <!--begin::Wizard Actions-->
                                    <div class="d-flex justify-content-between border-top pt-10 mt-15">
                                        <div class="mr-12 text-center">
                                            <button type="submit" class="btn btn-primary font-weight-bolder">Update</button>
                                        </div>
                                    </div>
                                    <!--end::Wizard Actions-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--end::Body-->
                </div>
            </form>
            <!--end::Card-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>
<!--end::Content-->
