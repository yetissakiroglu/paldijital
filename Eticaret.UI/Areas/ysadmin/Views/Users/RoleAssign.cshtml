@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Areas/ysadmin/Views/Shared/_Layout.cshtml";
}

        <div class="container">
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="text-danger">@ViewBag.ErrorMessage</div>
            }
            <!--begin::Card-->

            <form asp-controller="Users" asp-action="RoleAssign" method="post">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check">
                        <input asp-for="@Model[i].Exist" type="checkbox" class="form-check-input" />
                        <label asp-for="@Model[i].RoleId"> @Model[i].RoleName"</label>
                        <input type="hidden" asp-for="@Model[i].RoleName" />
                        <input type="hidden" asp-for="@Model[i].RoleId" />
                        <input type="hidden" asp-for="@Model[i].UserId" />

                    </div>
                }
                <button type="submit" class="btn btn-primary font-weight-bolder">Role Ata</button>

            </form>
        </div>
    